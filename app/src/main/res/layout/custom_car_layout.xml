<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardElevation="@dimen/custom_card_elevation"
    app:cardCornerRadius="@dimen/custom_card_radius"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/custom_card_iv"
            android:layout_width="0dp"
            android:layout_height="@dimen/custom_card_iv_height"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/backgrounds/scenic[12]" />

        <TextView
            android:id="@+id/custom_car_tv_model"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="@dimen/custom_car_tv_padding"
            android:text="TextView"
            android:textSize="@dimen/custom_car_model_textSize"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/custom_card_iv" />

        <TextView
            android:id="@+id/custom_car_tv_dpl"
            android:layout_width="@dimen/custom_car_tv_width"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_fuel"
            android:drawablePadding="@dimen/custom_car_tv_padding"
            android:gravity="center_vertical"
            android:padding="@dimen/custom_car_tv_padding"
            android:text="TextView"
            android:textSize="@dimen/custom_car_tv_dpl"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/custom_car_tv_model" />

        <TextView
            android:id="@+id/custom_car_tv_color"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_paint"
            android:drawablePadding="@dimen/custom_car_tv_padding"
            android:gravity="center_vertical"
            android:padding="@dimen/custom_car_tv_padding"
            android:text="TextView"
            android:textSize="@dimen/custom_car_tv_dpl"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/custom_car_tv_dpl"
            app:layout_constraintTop_toBottomOf="@+id/custom_car_tv_model" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>